n1 = float(input('Digite uma nota: '))

n2 = float(input('Digite outra nota:'))

media = (n1 + n2) / 2

if 5 <= media > 7:
    print(f'Sua média é de {media} e está abaixo do esperado. Você está em recuperação!')

elif media < 5:
    print(f'Sua média está abaixo de 5 você está reprovado. Sua média é de {media}')

elif 7 >= media >= 5:
    print(f'Parabéns você passou, sua média é de {media}.')
